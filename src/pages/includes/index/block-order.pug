.main__blockorder_title
    .title-h3 Выбери то, что нужно тебе
.main__blockorder_tabs
    ul.main__tabsnav
        li.tab-active
            a(href="#taborder-1") Купить
        li
            a(href="#taborder-2") Аренда
        li
            a(href="#taborder-3") Наше ПО
    .main__tabsstage.main__blockorder_tabsstage
        #taborder-1.tabsstage__item--active
            include block-buy
        #taborder-2.tabsstage__item
            include block-rent
        #taborder-3.tabsstage__item
            include block-soft
div(id="popupWin").modalwin
    button(id="buttonClose").modalwin__button_close
        img(src="img/closemodal.png", alt='', width=27)
    .modalwin__wrap
        .modalwin__title
            h2 Заявка
        form(id="form_blockorder").modalwin__blockorder_input
            .modalwin__blockorder_city
                label Город
                  input(name="orderCity", type="text", placeholder ='Москва')
            .modalwin__blockorder_name
                label Имя
                  input(name="orderName", type="text", placeholder ='Иванов Иван Иванович')
            .modalwin__blockorder_phone
                label Телефон
                  input(name="orderPnone", type="text", placeholder ="+____________")
            .modalwin__blockorder_sub
                input(id="sub", name="orderSub", type="checkbox")
                label(for="sub") Я согласен с условиями сбора и обработки персональных данных
            .modalwin__blockorder_button
                button.btn.btn--white Оставить заявку

